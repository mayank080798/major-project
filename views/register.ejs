<div class="card" style="margin-top: 20vh;">
  <div class="card-body " style="padding-top:8vh;">
    <form action="/user/register" method="POST">
      <div class="md-form check text-center">
        <h3 class="black-text mb-5"><strong>SIGN UP</strong></h3>
      </div>
      <%if (message.length > 0){%>
        <div class="alert alert-danger " role="alert">
          <span  class="text-purple" ><%= message%></span>
        </div>
      <%}%>

      <div class="md-form check">
        <input type="text" id="name" name="name" class="form-control" autocomplete="off" value="<%= typeof name != 'undefined' ? name : '' %>" />
        <label for="materialFormCardNameEx" class="font-weight-light">Username</label>
      </div>

      <div class="md-form check">
        <input type="email" id="email" name="email" class="form-control" autocomplete="off"  value="<%= typeof email != 'undefined' ? email : '' %>" />
        <label for="materialFormCardEmailEx" class="font-weight-light">Email</label>
      </div>

      <div class="md-form check">
        <input type="password" id="password" name="password" class="form-control" value="<%= typeof password != 'undefined' ? password : '' %>" />
        <label for="materialFormCardConfirmEx" class="font-weight-light">Password</label>
      </div>

      <div class="md-form check">
        <input type="password" id="password2" name="password2" class="form-control" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        <label for="materialFormCardPasswordEx" class="font-weight-light">Confirm password</label>
      </div>


      <div class="text-center py-4 mt-3">
        <button class="btn  btn-purple btn-block " style="border-radius: 25px;" type="submit">SIGN UP</button>
      </div>
      <div class="col-md-6">
        <p class="font-small grey-text d-flex justify-content-end">Have an account? <a href="/user/login"
            class="blue-text ml-1"> Login</a></p>
      </div>

    </form>
  </div>
  <div class="footer pt-3 mdb-color lighten-3">

    <div class="row d-flex justify-content-center">
      <p class="font-small black-text mb-2 pt-3">or sign up with:</p>
    </div>

    <div class="row mt-2 mb-3 d-flex justify-content-center">
      <a href="/user/google" class="fa-lg p-2 m-2 gplus-ic"><i class="fa fa-google-plus black-text fa-lg"> </i></a>
    </div>

  </div>

</div>

<div>
  <a href="#" class="to-top">
    <i class="fa fa-angle-double-up text-muted"></i>
  </a>
</div>
<script>
  const inputs = document.querySelectorAll(".form-control");

  function addcl(){
    let parent = this.parentNode;
      parent.classList.add("f");
    }
    function remcl(){
    let parent = this.parentNode;
    if(this.value == ""){
      parent.classList.remove("f");
      }
    }
    inputs.forEach(input => {
      input.addEventListener("focus", addcl);
      input.addEventListener("blur", remcl);
    });
</script>

